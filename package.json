{
  "name": "koekalenteri",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "install": "npm run install-be && npm run install-fe",
    "install-be": "cd koekalenteri-backend && npm ci",
    "install-fe": "cd koekalenteri-frontend && npm ci",
    "docker-init": "docker network create lambda-local",
    "dynamodb": "docker run -d --name dynamodb --network lambda-local -p 8000:8000 amazon/dynamodb-local",
    "start": "rimraf .aws-sam && concurrently -c auto npm:start-*",
    "start-backend": "cd koekalenteri-backend && npm start",
    "start-frontend": "cd koekalenteri-frontend && npm start",
    "start-dynamodb": "docker start dynamodb && docker attach dynamodb",
    "start-sam": "sam local start-api -p 8080 --docker-network lambda-local --warm-containers=LAZY 2>&1 | tr \"\r\" \"\n\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
}
